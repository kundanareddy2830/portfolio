{
  "name": "portfolio-backend",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "build": "./node_modules/.bin/esbuild src/index.ts --bundle --platform=node --format=esm --target=node18 --outfile=dist/index.js --external:vite --external:nanoid --external:zod --external:drizzle-orm/pg-core --external:drizzle-zod --alias:@shared=../shared",
    "dev": "cross-env NODE_ENV=development node --loader ts-node/esm src/index.ts",
    "start": "npx cross-env NODE_ENV=production node dist/index.js"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "nodemailer": "^6.9.7",
    "drizzle-orm": "^0.29.3",
    "drizzle-zod": "^0.5.1",
    "vite": "^5.0.8"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.5",
    "cross-env": "^7.0.3",
    "esbuild": "^0.19.11",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
} 